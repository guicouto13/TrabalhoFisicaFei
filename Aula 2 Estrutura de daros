#include <iostream>


class LES : public ILista{
    int M;
    int n;
    int *v;

publuc:
    LES(int M){
        this->M = M;
        this->n = 0;
        this->v = new int[M];
    };
    ~LES(){
        delete[] this->v;
    }


    void Imprime(){
        for (int i = 0; i < n; ++i) {
            std::cout << v[i] << " ";

        }
        std::cout << v[i] << "\n";
    }


    bool Insere(int x){
        if(n == M){
            return false;
        }

        //Busca lugar
        int i;
        for (int i = 0; i < n && v[i] < x, i++);
        //Problema 1 resolvido


        //Desloca
        for (int j = n; j > i ; ---j) {
            v[j] = v[j-1];
        }
        v[i] = x;
        // Incrementa nossa flag
        n++;

    }
};

int main(){

    LES *1 = new LES(7);
    l->Insere(5);
    l->Insere(10);
    l->Insere(15);
    l->Insere(20);
    l->Insere(12);
    l->Insere(1);
    l->Insere(30);
    l->Imprime();

    return 0;
}
